<% if @review.job %>
<h1>New Review for <%= @review.job.title %></h1>
<% else %>
<h1>New Review</h1>
<% end %>

<%= render partial: "layouts/errors", locals: {object: @review} %>

<%= form_for([@review.job, @review]) do |f|%>

  <% if !@review.job %>
    <%= f.label :job %>
    <%= f.collection_select :job_id, Job.all, :id, :title %>
<% else %>
    <%= f.hidden_field :job_id %>
<% end %>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <%= f.submit %>
  
<% end %>